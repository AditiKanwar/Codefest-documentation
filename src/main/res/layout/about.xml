<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/About_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:elevation="5dp">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/align"
            android:layout_marginStart="20dp"
            android:padding="4dp"
            app:srcCompat="@drawable/ic_back_button" />

        <TextView
            android:id="@+id/align"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="4dp"
            android:paddingTop="2dp"
            android:text="About Us"
            android:textColor="@color/cardview_light_background"
            android:textSize="22sp"
            android:textStyle="normal" />

    </RelativeLayout>


    <TextView
        android:id="@+id/textView6"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView2"
        android:layout_below="@+id/About_us"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="28dp"
        android:text="ABOUT"
        android:textAlignment="center"
        android:textColor="#de0b0b"
        android:textSize="13sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="245dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/About_us"
        android:layout_marginTop="92dp"
        android:padding="15dp"
        android:text="Swachh Bharat Abhiyan or Swachh Bharat Mission is a campaign in India that aims to clean up the streets, roads and infrastructure of India's cities, smaller towns, and rural areas. This App is a small contribution  towards this mission ."
        android:textSize="15sp"
        android:textStyle="bold" />
</RelativeLayout>